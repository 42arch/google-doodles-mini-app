/* {{page}}.wxss */

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-bottom: 3rem;
}

.archive-doodles {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 1rem;
}

.doodle-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  min-height: 6rem;
  padding-top: 1.2rem;
  padding-bottom: .7rem;
  border-top: 1px dashed #bbb;
  border-radius: .5rem;
}

.doodle-view .doodle-img {
  width: 60%;
}

.doodle-img image {
  width: 200px;
}

.doodle-view .doodle-info {
  width: 40%;
  font-size: 0.8rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.archive-more {
  width: 100%;
  padding-top: 2rem;
  text-align: center;
  color: #4c8aff;
}

.archive-more text {
  width: 100%;
}